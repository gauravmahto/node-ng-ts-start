{
    "name": "typescript-node-angular-webpack",
    "version": "1.0.0",
    "description": "Test bed for TypeScript + Node.js + Angular + Webpack",
    "main": "bin/server/app.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gauravmahto/node-ng-ts-start.git"
    },
    "scripts": {
        "start-server": "node bin/server/app.js",
        "start-server-watch": "nodemon bin/server/app.js",
        "server-compile": "tsc -p src/server & exit 0",
        "server-compile-watch": "tsc -p src/server -w",
        "client-compile": "webpack --env.production --config webpack.config.js",
        "client-compile-watch": "webpack --config webpack.config.js"
    },
    "nodemonConfig": {
        "watch": [
            "bin/server"
        ]
    },
    "author": "Gaurav",
    "license": "ISC",
    "dependencies": {
        "@angular/animations": "5.0.1",
        "@angular/common": "5.0.1",
        "@angular/compiler": "5.0.1",
        "@angular/core": "5.0.1",
        "@angular/forms": "5.0.1",
        "@angular/http": "5.0.1",
        "@angular/platform-browser": "5.0.1",
        "@angular/platform-browser-dynamic": "5.0.1",
        "@angular/router": "5.0.1",
        "@angular/tsc-wrapped": "4.4.6",
        "@angular/upgrade": "5.0.1",
        "app-module-path": "2.2.0",
        "core-js": "2.5.1",
        "express": "4.16.2",
        "jquery": "3.2.1",
        "lodash": "4.17.15",
        "rxjs": "5.5.2",
        "zone.js": "0.8.18"
    },
    "devDependencies": {
        "@types/angular": "1.6.39",
        "@types/angular-animate": "1.5.9",
        "@types/angular-cookies": "1.4.5",
        "@types/angular-mocks": "1.5.11",
        "@types/angular-resource": "1.5.14",
        "@types/angular-route": "1.3.4",
        "@types/angular-sanitize": "1.3.6",
        "@types/express": "4.11.1",
        "@types/jquery": "3.2.13",
        "@types/node": "8.0.51",
        "angular2-template-loader": "0.6.2",
        "awesome-typescript-loader": "3.3.0",
        "clean-webpack-plugin": "0.1.17",
        "css-loader": "0.28.7",
        "extract-text-webpack-plugin": "3.0.2",
        "html-loader": "0.5.1",
        "html-webpack-plugin": "2.30.1",
        "node-sass": "4.6.0",
        "nodemon": "1.12.1",
        "raw-loader": "0.5.1",
        "sass-loader": "6.0.6",
        "source-map-explorer": "1.5.0",
        "style-loader": "0.19.0",
        "tslint": "5.9.1",
        "typescript": "2.7.1",
        "webpack": "3.6.0",
        "webpack-merge": "4.1.0"
    }
}
